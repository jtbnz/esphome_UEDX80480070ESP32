# ESPHome Secrets Configuration Example
# Copy this file to secrets.yaml and update with your values
# NEVER commit secrets.yaml to version control!

# WiFi Configuration
wifi_ssid: "your_wifi_ssid"
wifi_password: "your_wifi_password"

# Access Point Fallback Password (use a strong password)
ap_password: "use_a_strong_password_here"

# Home Assistant API Encryption Key
# Generate with: openssl rand -base64 32
api_encryption_key: "replace_with_base64_encoded_32_byte_key"

# OTA Update Password (use a strong password)
ota_password: "use_a_strong_ota_password"